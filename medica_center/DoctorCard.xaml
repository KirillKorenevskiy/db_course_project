<UserControl x:Class="medica_center.DoctorCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:medica_center"
             mc:Ignorable="d" d:DesignWidth="300" Height="116">
    <Grid Margin="10">
            <StackPanel Background="AliceBlue">
                <TextBlock Text="{Binding FirstName, RelativeSource={RelativeSource AncestorType=local:DoctorCard}}" FontWeight="Bold" FontSize="16" Margin="5,0,0,5"/>
                <TextBlock Text="{Binding LastName, RelativeSource={RelativeSource AncestorType=local:DoctorCard}}" FontWeight="Bold" FontSize="16" Margin="5,0,0,5"/>
                <TextBlock Text="{Binding Specialization, RelativeSource={RelativeSource AncestorType=local:DoctorCard}}" Margin="5,0,0,5"/>
            <TextBlock Text="{Binding Schedule, RelativeSource={RelativeSource AncestorType=local:DoctorCard}}" Margin="5,0,0,0"/>
            </StackPanel>
    </Grid>
</UserControl>
