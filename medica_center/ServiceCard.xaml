<UserControl x:Class="medica_center.ServiceCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:medica_center"
             mc:Ignorable="d" d:DesignWidth="300" Height="104">
    <Grid>
        <Grid Margin="10">
            <StackPanel Background="LightGray" Height="90" VerticalAlignment="Top">
                <TextBlock Text="{Binding Name, RelativeSource={RelativeSource AncestorType=local:ServiceCard}}" FontWeight="Bold" FontSize="16" Margin="0,0,0,5"/>
                <TextBlock Text="{Binding Orientation, RelativeSource={RelativeSource AncestorType=local:ServiceCard}}"  Margin="0,0,0,5"/>
                <TextBlock Text="{Binding Description, RelativeSource={RelativeSource AncestorType=local:ServiceCard}}" Margin="0,0,0,5"/>
                <TextBlock Text="{Binding Price, RelativeSource={RelativeSource AncestorType=local:ServiceCard}}"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
